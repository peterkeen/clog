<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label :title %>
    <%= f.text_field :title, :class => 'span12' %>
    <%= f.label :tag_list, "Send to these tags, separate with comma (empty means everyone)" %>
    <%= f.text_field :tag_list, :class => 'tagmanager' %>
    <%= f.label :body %>
    <%= f.text_area :body, :class => 'span12' %>
    <pre><code># Biggest Header
## Smaller Header
### Even Smaller Header

* bulleted list item
1. numbered list item

* * * horizontal rule

[link title](http://example.com)</code></pre>
    <div class="form-actions">
      <%= f.submit :class => 'btn btn-success' %> <em>Note: Posts won't be emailed until you hit the "Publish" button</em>
    </div>
<% end %>
